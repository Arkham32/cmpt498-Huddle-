<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lockerroom"
    >

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="154dp"
        android:layout_height="25dp"

        android:layout_below="@+id/sportTextView"
        android:layout_marginStart="71dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/dateTextView"
        android:text="Time"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/sportTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="Sport"
        android:textColor="#fff"
        android:textSize="36sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="159dp"
        android:layout_height="25dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="49dp"
        android:text="Date"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/joinedTextView"
        android:layout_width="match_parent"
        android:layout_height="25dp"

        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="227dp"
        android:text="Players Joined Goes Here"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="25dp"

        android:layout_alignTop="@+id/postedByTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:text="Posted By:"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/playersNeededTextView"
        android:layout_width="42dp"
        android:layout_height="25dp"

        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginStart="1dp"
        android:layout_marginTop="25dp"
        android:text="Players Needed Goes Here"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="25dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="129dp"
        android:text="Info:"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/postedByTextView"
        android:layout_width="267dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="0dp"
        android:text="Posted By Goes Here"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="383dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/postInfoTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="0dp"
        android:text="Players Needed:"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/playersNeededTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="Players Joined:"
        android:textColor="#fff"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/postInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-5dp"
        android:maxLines="5"
        android:text="Post Info"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:text="Location"
        android:textColor="#fff"
        android:textSize="18sp" />


    <android.support.v7.widget.CardView
        android:id="@+id/cancelButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="142dp"
        app:cardBackgroundColor="#8e44ad"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/cancelButton">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Cancel"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/joinButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        app:cardBackgroundColor="#2ecc71"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/joinButton">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Join"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
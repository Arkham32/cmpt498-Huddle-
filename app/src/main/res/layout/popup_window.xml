<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/eventinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cancelbuttonevent"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="248dp"
            android:inputType="textMultiLine"
            android:text="Sport Info"
            android:textColor="@color/fbutton_color_orange" />

        <TextView
            android:id="@+id/eventsport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/eventinfo"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="-8dp"
            android:layout_marginTop="112dp"
            android:text="Sport"
            android:textColor="@color/fbutton_color_orange"
            android:textSize="32dp" />


        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="45dp"
            android:layout_toEndOf="@+id/textView6"
            android:inputType="textMultiLine"
            android:text="Distance" />

        <Button
            android:id="@+id/joinbuttonevent"
            android:layout_width="133dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="154dp"
            android:background="@color/btnSignActive"
            android:text="I'm Interested!"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/cancelbuttonevent"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/joinbuttonevent"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-15dp"
            android:layout_marginBottom="85dp"
            android:background="@color/fbutton_color_orange"
            android:text="Back to Main Menu"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/eventsport"
            android:layout_marginEnd="-25dp"
            android:layout_marginBottom="-84dp"
            android:layout_toStartOf="@+id/cancelbuttonevent"
            android:text="Sport Info: " />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignTop="@+id/distance"
            android:layout_marginStart="2dp"
            android:layout_marginTop="0dp"
            android:text="Distance: " />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>